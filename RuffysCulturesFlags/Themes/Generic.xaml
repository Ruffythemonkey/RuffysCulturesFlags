<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:RuffysCulturesFlags.Converter"
    xmlns:local="using:RuffysCulturesFlags">

    <c:IntToImageConverter x:Key="IntToImageConverter" />

    <Style TargetType="local:CultureFlags">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="11" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:CultureFlags">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Image
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Source="{TemplateBinding CultureLcId}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
